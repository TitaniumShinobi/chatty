# Production Environment Configuration
# Copy this to .env and update with your actual values

# Server Configuration
NODE_ENV=production
PORT=5000
HOST=your-production-domain.com

# Database (Production MongoDB)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/chatty

# JWT Secrets (USE STRONG, UNIQUE SECRETS IN PRODUCTION!)
JWT_SECRET=your-super-secret-jwt-key-here-change-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-here-change-in-production

# Frontend URL (Production domain)
FRONTEND_URL=https://your-production-domain.com

# OAuth Configuration (Production URLs)
GOOGLE_CLIENT_ID=your-google-client-id-here
GOOGLE_CLIENT_SECRET=your-google-client-secret-here
GOOGLE_CALLBACK_URL=https://your-production-domain.com/api/auth/google/callback

# OAuth Settings (Production)
PUBLIC_CALLBACK_BASE=https://your-production-domain.com
CALLBACK_PATH=/api/auth/google/callback
POST_LOGIN_REDIRECT=https://your-production-domain.com
COOKIE_NAME=chatty_session

# Email Configuration (Production)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# File Upload (Production)
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Backup Configuration (Production)
BACKUP_INTERVAL=0 0 2 * * *
BACKUP_PATH=./backups
